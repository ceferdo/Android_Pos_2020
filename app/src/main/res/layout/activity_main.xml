<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:layout_margin="10dip">
    <TableRow>

        <TextView
            android:inputType="textNoSuggestions"
            android:padding="3dip"
            android:text="Alcool:"
            android:textColor="#3B55FF" />
        <EditText android:id="@+id/valorAlcool" android:padding="3dip"
            android:inputType="textNoSuggestions" />
    </TableRow>
    <TableRow>

        <TextView
            android:text="Gasolina: "
            android:textColor="#3B55FF" />
        <EditText android:id="@+id/valorGasolina"
            android:inputType="textNoSuggestions" />
    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/calculo"
            android:layout_span="2"
            android:text="CÃ¡lculo"
            android:textColor="#F44336"
            app:backgroundTint="@color/material_on_surface_disabled" />
    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/url"
            android:layout_span="2"
            android:text="Abrir URL"
            android:textColor="#F44336"
            app:backgroundTint="@color/material_on_surface_disabled" />
    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/ligar"
            android:layout_span="2"
            android:text="Ligar"
            android:textColor="#F44336"
            app:backgroundTint="@color/material_on_surface_disabled" />
    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/lista"
            android:layout_span="2"
            android:text="Lista"
            android:textColor="#F44336"
            app:backgroundTint="@color/material_on_surface_disabled" />
    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/listaLinha"
            android:layout_span="2"
            android:text="Lista"
            android:textColor="#F44336"
            app:backgroundTint="@color/material_on_surface_disabled" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</TableLayout>